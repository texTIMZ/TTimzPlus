<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="120dp"
    android:layout_margin="2dp"
    android:background="#FFF"
    android:elevation="4dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/recycler_event_image"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/news_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recycler_event_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="3"
            android:background="#b4ffffff"
            android:padding="8dp"
            android:text="The News Headline goes here"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recycler_event_publish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#FFF"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:text="5 Days Ago"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
